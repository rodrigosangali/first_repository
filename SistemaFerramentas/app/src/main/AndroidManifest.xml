<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rod.app.sistemaferramentas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MenuPrincipalActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CadastrarFerramentaActivity"
            android:label="@string/title_activity_cadastrar_ferramenta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AlterarDadosActivity"
            android:label="@string/title_activity_alterar_dados"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConsultarFerramentaActivity"
            android:label="@string/title_activity_consultar_ferramenta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ExcluirFerramentaActivity"
            android:label="@string/title_activity_excluir_ferramenta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BuscaFerramentasActivity"
            android:label="@string/title_activity_busca_ferramentas"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
